mixin productsCarousel(data)
    .carousel.js-carousel
        .swiper-wrapper
            each item, index in data
                if index === 1
                    +productItem(item, true, false ,true)
                else
                    +productItem(item, false, false, true)
        .carousel__nav
            button.carousel__nav-item.carousel__nav-item--prev.js-carousel-button-prev
                include ../../images/svg/arrow.svg
            button.carousel__nav-item.carousel__nav-item--next.js-carousel-button-next
                include ../../images/svg/arrow.svg

