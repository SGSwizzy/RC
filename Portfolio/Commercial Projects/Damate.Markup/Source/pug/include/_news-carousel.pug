mixin newsCarousel(data)
    .carousel.js-carousel
        .swiper-wrapper
            each item in data
                .news-item.swiper-slide
                    .news-item__header
                        .news-item__source= item.source
                        .news-item__date= item.date
                    a.news-item__title(href='/news-detail')= item.title
                    .news-item__text= item.text
        .carousel__nav
            button.carousel__nav-item.carousel__nav-item--prev.js-carousel-button-prev
                include ../../images/svg/arrow.svg
            button.carousel__nav-item.carousel__nav-item--next.js-carousel-button-next
                include ../../images/svg/arrow.svg

