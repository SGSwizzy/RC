mixin wikiCarousel(data)
    .carousel.js-carousel--wiki.wiki-carousel&attributes(attributes)
        .swiper-wrapper
            each item in data
                .swiper-slide
                    +wiki-card(item).wiki-card--sm

        .carousel__nav
            button.carousel__nav-item.carousel__nav-item--prev.js-carousel-button-prev
                include ../../images/svg/arrow.svg
            button.carousel__nav-item.carousel__nav-item--next.js-carousel-button-next
                include ../../images/svg/arrow.svg
