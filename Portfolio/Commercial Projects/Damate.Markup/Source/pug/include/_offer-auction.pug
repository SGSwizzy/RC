mixin offer-auction(item)
        .offer-item__header
        
            .offer-item__img
                img(src=require('../images/offers/' + item.img) alt=item.title)
            .offer-item__header-body
                .offer-item__buyer= item.buyer
                a.offer-item__title(href="/offer-detail")= item.title
            .offer-item__responded= item.responded
        .characteristics.characteristics--small.characteristics--offers
            .characteristics__item.characteristics__item--gender
                .characteristics__item-title Пол особи
                .characteristics__item-value= item.feature.gender
            .characteristics__item.characteristics__item--weigh
                .characteristics__item-title Диапазон ЖВ
                .characteristics__item-value= item.feature.weigh
            .characteristics__item.characteristics__item--quantity.characteristics__item--fertility
                .characteristics__item-title Количество голов
                .characteristics__item-value= item.feature.quantity
            .characteristics__item.characteristics__item--date
                .characteristics__item-title Срок завершения торгов
                .characteristics__item-value= item.feature.date
            .characteristics__item.characteristics__item--location
                .characteristics__item-title Расположение
                .characteristics__item-value= item.feature.location
            .characteristics__item.characteristics__item--current-price
                    .characteristics__item-title Текущая цена на торгах
                    .characteristics__item-value.characteristics__item-value--bg= item.feature.currentPrice


        .offer-item__footer.offer-item__footer--auction

            .offer-item__footer-btns
                button.btn.btn--primary(type='button') Остановить 
                    .btn__ico
                        include ../../images/svg-sprite/responded.svg
                button.btn.btn--offer-delete(type='button') Удалить
                    .btn__ico
                        include ../../images/svg-sprite/delete-btn.svg


            button.btn.btn--secondary.btn--offer-edit(type='button') Редактировать аукцион
                .btn__ico
                    include ../../images/svg-sprite/edit.svg