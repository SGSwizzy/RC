    .goods
        .container 
                .goods-head
                    .title-favorite
                        +page-title("Санта-Инес")
                        +add-to-favorite
                    .goods__number №123-456

                .goods-item 
                    .goods-slider 
                        .goods-slider__item
                            img(src=require("../images/product/product-big-1.png"), alt="Слайд")
                    .goods-price 
